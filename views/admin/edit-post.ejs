<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete Post" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" class="postBox">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>" class="postTitle">

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10" class="postContent"><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn">

</form>

