   <section class="mt-4 mb-4 p-1">
    <div class="row  justify-content-center mx-auto applicationFrom">
      <div class="text-center mb-3">
        <h4>Submit your application for this position</h4>
      </div>  
      <div class="col-lg-6 col-md-8  mx-auto">
        <form action="https://getform.io/f/DbDGBYal" class=" rounded-1 p-4 border bg-white" method="POST" enctype="multipart/form-data">
          <label class="d-block mb-4">
            <span class="form-label d-block">Your name<small>*</small></span>
            <input required name="name" type="text" class="form-control"/>
         </label>
  
          <label class="d-block mb-4">
            <span class="form-label d-block">Email address<small>*</small></span>
            <input required name="email" type="email" class="form-control"/> 
          </label>
  
          <label class="d-block mb-4">
            <span class="form-label d-block">Phone<small>*</small></span>
            <input required name="phone" type="text" class="form-control"/>
          </label>
  
          <label class="d-block mb-4">
            <span class="form-label d-block">Tell us more about yourself<small>*</small></span>
            <textarea
              name="message" class="form-control" rows="3"> 
            </textarea>
          </label>
  
          <label class="d-block mb-4">
            <span class="form-label d-block">Upload CV/Resume<small>*</small></span>
            <input required name="cv" type="file" class="form-control" accept=".doc, .docx, txt, .pdf" />
            <small>Allowed Type(s): pdf, doc, docx, txt</small>
          </label>
  
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" required/>
            <label class="form-check-label" for="flexCheckChecked">
                By submitting this form, you consent to the secure storage and handling of your information.<small>*</small>
            </label>
          </div>
  
          <div class="mb-2 mt-4">
            <button class="submitBtn">
                Submit
